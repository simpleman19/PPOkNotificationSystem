<!DOCTYPE html>
<html>
@{ 
    bool loggedIn = false;
    bool pharmacist = false;
    bool pharmAdmin = false;
    bool ppokAdmin = false;

    var db = new PPOk_Notifications.Service.SQLService();
    if (Session["user_id"] != null)
    {
        var user = db.GetUserByIdActive((long)Session["user_id"]);
        if (user != null)
        {
            loggedIn = true;
            if (user.GetType() == typeof(PPOk_Notifications.Models.PharmacyUser))
            {
                pharmacist = true;
            }
        }

    }

}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PPOk</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PPOk Notifier", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (pharmacist || pharmAdmin)
                    {
                        <li><a href="~/">Refills</a></li>
                        <li><a href="~/Notification/NotificationList">Notifications</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (pharmAdmin)
                    {
                        <li><a href="~/Pharmacy/Admin">Admin</a></li>
                    }
                    @if (!loggedIn)
                    {
                        <li><a href="~/PharmacistLogin/">Login</a></li>
                    } else
                    {
                        <li><a href="~/PharmacistLogin/Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript">

        $(function () {
            $('.navbar-nav li').click(function () {
                $(this).addClass('active').siblings().removeClass('active');
            });
        });

    </script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>