@model List<PPOk_Notifications.Models.PharmacyUser>

@{
    ViewBag.Title = "PharmacistList";
}

<h2>List of Pharmacists</h2>

<p>
    @Html.ActionLink("Add Pharmacist", "AddPharmacist")
</p>

<table class="table" id="pharmacy_list">
    <thead>
        <tr>
            <th>
                first_name
            </th>
            <th>
                last_name
            </th>
            <th>
                phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td> 
                    @Html.ActionLink("Edit", "EditPharmacist", new {  id = item.UserId  }) |
                    @Html.ActionLink("Delete", "DeletePharmacist", new { id = item.UserId })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        pharmacy_table = $('#pharmacy_list').DataTable({
            "dom": '<"pull-left"f><"pull-right"l>tip',
            "paging": false,
            "columnDefs": [
                {
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }
            ],
            language: {
                searchPlaceholder: "Search Pharmacies"
            }
        });
    }());

</script>

