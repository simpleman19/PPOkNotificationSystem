
@{
    ViewBag.Title = "Password Reset Request";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4" style="text-align:center;">
            <h2 style="margin-bottom:20px; margin-top:40px;">Password Reset Request</h2>

            @using (Html.BeginForm())
            {
                <div class="inner-addon left-addon">
                    <i class="glyphicon glyphicon-envelope"></i>
                    <input type="text" name="email" class="form-control" placeholder="Email" style="min-width:100%;"/>
                </div>

                <div class="form-group" style="margin-top: 10px;">
                    <input type="submit" value="Request Reset" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>