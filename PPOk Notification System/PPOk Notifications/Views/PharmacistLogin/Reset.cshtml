@model string

@{
    ViewBag.Title = "Reset Password";
}

<h2>Reset Password: @Model</h2>

@using (Html.BeginForm())
{
    <div class="inner-addon left-addon">
        <i class="glyphicon glyphicon-user"></i>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password"/>
    </div>

    <div class="inner-addon left-addon" style="margin-top: 10px;">
        <i class="glyphicon glyphicon-user"></i>
        <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" oninput="check(this)"/>
    </div>

    <script language="javascript" type="text/javascript">
        function check(input) {
            if (input.value !== document.getElementById("password").value) {
                input.setCustomValidity("Password must match above.");
            } else {
                input.setCustomValidity("");
            }
        }
    </script>

    <div class="form-group" style="margin-top: 10px;">
        <input type="submit" value="Login" , class="btn btn-default" />
    </div>
}
